#version 330 core

in vec3 pos;
in vec4 vertexColor;
out vec4 color;
uniform vec3 objPos;

float rand(vec2 co)
{
    return fract(sin(dot(co, vec2(12.9898, 78.233))) * 43758.5453);
}

void main()
{
    vec3 color1 = vec3(1.9,0.55,0);
    vec3 color2 = vec3(0.226,0.000,0.615);
    color = vec4(pos - objPos, 1);//vertexColor;
}